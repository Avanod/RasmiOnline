@model StatisticModel
@{
    ViewBag.Title = "Statistic";
}
@section header{
    <link href="~/Content/Styles/Console/01-Admin/Dashboard/statistic.min.css" rel="stylesheet" />
    <style>
        .card{
            padding:20px 10px;
        }
    </style>
}
<div class="row mb-15">
    <div class="col-3 mb-15">
        <div class="widget style1 navy-bg">
            <div class="row">
                <div class="col-4">
                    <i class="zmdi zmdi-account font-5x"></i>
                </div>
                <div class="col-8 text-center">
                    <span> تعداد کل کاربران </span>
                    <h2 class="font-bold">@Model.UserCount.ToString("N0")</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-3 mb-15">
        <div class="widget style1 lazur-bg">
            <div class="row">
                <div class="col-4">
                    <i class="zmdi zmdi-shopping-basket font-5x"></i>
                </div>
                <div class="col-8 text-center">
                    <span> تعداد کل  سفارشات </span>
                    <h2 class="font-bold">@Model.OrderCount.ToString("N0")</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-3 mb-15">
        <div class="widget style1 yellow-bg">
            <div class="row">
                <div class="col-4">
                    <i class="zmdi zmdi-receipt font-5x"></i>
                </div>
                <div class="col-8 text-center">
                    <span> تعداد کل پرداخت ها </span>
                    <h2 class="font-bold">@Model.PayCount.ToString("N0")</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-3 mb-15">
        <div class="widget style1 red-bg">
            <div class="row">
                <div class="col-4">
                    <i class="zmdi zmdi-money font-5x"></i>
                </div>
                <div class="col-8 text-center">
                    <span> مبلغ کل پرداخت ها </span>
                    <h2 class="font-bold">@Model.PayAmount.ToString("N0")</h2>
                </div>
            </div>
        </div>
    </div>
</div>
 
<div class="row">
    <div class="col-xs-12 col-sm-6 mb-15">
        <div class="card">
            <canvas height="300" id="user_in_days"></canvas>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 mb-15">
        <div class="card">
            <canvas style="height:300px" id="order_in_days"></canvas>
        </div>
    </div>
</div>
<div class="row mb-15">
    <div class="col-xs-12 col-sm-6 mb-15">
        <div class="card">
            <canvas style="height:300px" id="payment_in_days"></canvas>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 mb-15">
        <div class="card">
            <canvas style="height:300px" id="amount_in_days"></canvas>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/Plugins/chart.min.js"></script>
    <script>
        var userInDays = @(Html.Raw(Model.UserInDays.SerializeToJson()));
        var orderInDays = @(Html.Raw(Model.OrderInDays.SerializeToJson()));
        var payCountInDays = @(Html.Raw(Model.PayCountInDays.SerializeToJson()));
        var payAmountInDays = @(Html.Raw(Model.PayAmountInDays.SerializeToJson()));
    </script>
    <script src="~/Scripts/Console/01-Admin/Dashboard/statistic.js"></script>
}



