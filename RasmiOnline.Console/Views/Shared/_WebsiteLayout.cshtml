<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="https://portal.amirshahigroup.com/Content/Images/Logo/LogoOnly.png" sizes="32x32">
    <link rel="icon" href="https://portal.amirshahigroup.com/Content/Images/Logo/LogoOnly.png" sizes="192x192">
    <link rel="apple-touch-icon-precomposed" href="https://portal.amirshahigroup.com/Content/Images/Logo/LogoOnly.png">

    <title>@ViewBag.Title</title>
    @Styles.Render(Links.Bundles.Styles.MainCss)
    @RenderSection("head", false)
    <style>
        body {
            flex-direction: column;
            margin-top: 0px !important;
        }

        header {
            margin-bottom: 16px;
            position: relative;
            display: flex;
            align-items: center;
        }

            header .container {
                padding: 0 45px;
            }

        @@media screen and (max-width: 640px) {
            header .container {
                padding: 0 30px;
                width: 100%;
                margin-left: 0;
                margin-right: 0;
            }
        }

        nav {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }

            nav img {
                width: 44px;
            }

            nav .title {
                display: flex;
                align-items: center;
                float: left;
                line-height: 50px;
                font-weight: bold;
            }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12">
                    <nav class="">
                        <div>
                            <img src="@Url.Content("~/Content/Images/logo/logoOnly.png")" alt="logo" />
                            <div class="title">دارالترجه رسمی امیرشاهی</div>
                        </div>
                        <a class="btn btn-default" href="https://www.amirshahigroup.com/">@LocalMessage.Return</a>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    @*@{Html.RenderPartial(MVC.Shared.Views.Partials._PortalHeader); }*@
    <main class="w-100">
        <section class="container contents">
            @RenderBody()
        </section>
    </main>
    <div class="modal" id="modal" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">

                </div>

            </div>
        </div>
    </div>
    @*@{Html.RenderPartial(MVC.Shared.Views.Partials._PortalFooter); }*@
    @Scripts.Render(Links.Bundles.Scripts.MainScripts)
    @RenderSection("footer", false)
</body>
</html>