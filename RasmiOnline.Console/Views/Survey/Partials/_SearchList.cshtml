@model List<Survey>

@{
    Layout = null;
}

<div class="card d-none d-md-block d-lg-block">
    <div class="card-block">
        <div class="table-responsive">
            <div id="data-table_wrapper" class="dataTables_wrapper">
                <table id="data-table" class="table-striped table dataTable" role="grid" aria-describedby="data-table_info">
                    <thead class="thead-default">
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="data-table" rowspan="1" colspan="1" aria-sort="ascending">#</th>
                            <th class="sorting" tabindex="0" aria-controls="data-table" rowspan="1" colspan="1">@Html.DisplayNameFor(item => item.FirstOrDefault().Subject)</th>
                            <th class="sorting" tabindex="0" aria-controls="data-table" rowspan="1" colspan="1">@Html.DisplayNameFor(item => item.FirstOrDefault().Text)</th>
                            <th class="sorting" tabindex="0" aria-controls="data-table" rowspan="1" colspan="1">@LocalMessage.Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            int count = 1;
                            foreach (var item in Model)
                            {
                                <tr role="row">
                                    <td class="sorting_1">@count</td>
                                    <td>@item.Subject</td>
                                    <td>@item.Text</td>
                                    <td>
                                        <div class="actions">
                                            <div class="dropdown actions__item">
                                                <i data-toggle="dropdown" class="zmdi zmdi-more-vert" aria-expanded="false"></i>
                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <a href="" edit-item-modal="@($"{nameof(Survey)}")" data-edit-url="@(Url.Action(MVC.Survey.ActionNames.Update,MVC.Survey.Name, new { id= item.SurveyId}))" data-modal-title="@LocalMessage.Edit @LocalMessage.Survey" class="dropdown-item"><i class="zmdi zmdi-edit"></i>&nbsp;@LocalMessage.Edit</a>
                                                    <a href="" data-delete-url="@(Url.Action(MVC.Survey.ActionNames.Delete, MVC.Survey.Name, new { id= item.SurveyId}))" data-modal-title="@LocalMessage.Delete @LocalMessage.Survey" class="dropdown-item"><i class="zmdi zmdi-delete"></i>&nbsp;@LocalMessage.Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                count++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>