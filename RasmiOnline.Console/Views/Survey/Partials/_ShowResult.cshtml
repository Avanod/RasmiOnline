@model SurveyResult

    <div class="card d-none d-md-block d-lg-block">
        <div class="card-block">
            <div class="heading">
                <h5 class="subject">@Html.DisplayNameFor(x=>x.Subject): @Model.Subject</h5>
                <p class="text">@Html.DisplayNameFor(x => x.Text): @Model.Text</p>
            </div>
            <div class="table-responsive">
                <div id="data-table_wrapper" class="dataTables_wrapper">
                    <table id="data-table" class="table-striped table dataTable" role="grid" aria-describedby="data-table_info">
                        <thead class="thead-default">
                            <tr role="row">
                                <th class="sorting_asc" tabindex="0" aria-controls="data-table" rowspan="1" colspan="1" aria-sort="ascending">#</th>
                                <th class="sorting" tabindex="0" aria-controls="data-table" rowspan="1" colspan="1">@Html.DisplayNameFor(item => item.Items[0].Text)</th>
                                <th class="sorting" tabindex="0" aria-controls="data-table" rowspan="1" colspan="1">@Html.DisplayNameFor(item => item.Items[0].Tedad)</th>
                                <th class="sorting" tabindex="0" aria-controls="data-table" rowspan="1" colspan="1">@Html.DisplayNameFor(item => item.Items[0].Percent)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Items.Any())
                            {
                                int count = 1;
                                foreach (var item in Model.Items)
                                {
                                    <tr role="row">
                                        <td>@(Model.Items.IndexOf(item)+1)</td>
                                        <td>@item.Text</td>
                                        <td>@item.Tedad</td>
                                        <td>%@item.Percent</td>
                                    </tr>
                                    count++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
