@model ActionResponse<Transaction>

@{
    <div class="row">
        <div class="col-12">
            @if (Model.IsNotNull() && Model.IsSuccessful)
            {
                <form  class="col-12">
                    <div class="row">
                        <div class="col-12 col-sm-6 m-b-20" dir="rtl">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Result.OrderId)
                                @Html.TextBoxFor(x => x.Result.OrderId, null, new { @class = "form-control type-fa", @readonly = "readonly" })
                                <i class="form-group__bar"></i>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 m-b-20" dir="rtl">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Result.Price)
                                @Html.TextBoxFor(x => x.Result.Price, null, new { @class = "form-control type-fa", @readonly = "readonly" })
                                <i class="form-group__bar"></i>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 m-b-20" dir="rtl">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Result.TrackingId)
                                @Html.TextBoxFor(x => x.Result.TrackingId, null, new { @class = "form-control type-fa", @readonly = "readonly" })
                                <i class="form-group__bar"></i>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 m-b-20" dir="rtl">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Result.Status)
                                @Html.TextAreaFor(x => x.Result.Status, new { @class = "form-control type-fa", @readonly = "readonly" })
                                <i class="form-group__bar"></i>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 m-b-20" dir="rtl">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Result.InsertDateSh)
                                @Html.TextAreaFor(x => x.Result.InsertDateSh, new { @class = "form-control type-fa", @readonly = "readonly" })
                                <i class="form-group__bar"></i>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 m-b-20" dir="rtl">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Result.Order.User)
                                @Html.TextAreaFor(x => x.Result.Order.User.MobileNumber, new { @class = "form-control type-fa", @readonly = "readonly" })
                                <i class="form-group__bar"></i>
                            </div>
                        </div>
                    </div>
                </form>
            }
            else
            {
                <div class="text-center text-danger">@LocalMessage.BadRequest</div>
            }
        </div>

    </div>
}